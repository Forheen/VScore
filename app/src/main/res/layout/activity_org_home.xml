<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Organizer.ui.Dashboard"
    android:background="@drawable/gradient_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:background="@color/transparent_blue"
        android:orientation="vertical">

                <ImageView
                    android:layout_gravity="center"

                    android:id="@+id/img_volleyball"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo"

                    />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:padding="25dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/card_home_back"
        android:orientation="vertical">
            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:layout_gravity="center"
                android:text="O n g o i n g   M a t c h"
                android:textColor="@color/white"
                android:layout_margin="15dp"
                android:textSize="24sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Team 1"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/txt2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Team 2"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:orientation="horizontal">
            <TextView

                android:id="@+id/txt3"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:textSize="50sp" />
            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="vs"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:textSize="40sp" />
            <TextView
                android:id="@+id/txt5"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:textSize="50sp" />
        </LinearLayout>
        <View android:layout_width="wrap_content"
            android:layout_height="30dp"
             />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:background="@drawable/rounded_button_yellow"
            android:orientation="vertical">
            <TextView

                android:id="@+id/t"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Upcoming Events"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textSize="18sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:padding="10dp"
                android:background="@color/blue"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="24th March,2023"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:textSize="18sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                                    android:background="@color/blue"
                    android:orientation="horizontal">
                            <ImageView
                                android:layout_gravity="center"

                                android:id="@+id/img_volleyball12"
                                android:layout_width="20dp"
                                android:layout_height="70dp"
                                android:src="@drawable/logo"
                                android:gravity="bottom"
                                android:layout_weight="1"

                                />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/blue"
                    android:orientation="vertical">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Team 1"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:textSize="18sp" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Tvs"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:textSize="18sp" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Team 2"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:textSize="18sp" />
                </LinearLayout>
                    <ImageView
                        android:layout_gravity="center"

                        android:id="@+id/img_volleyball13"
                        android:layout_width="20dp"
                        android:layout_height="70dp"
                        android:src="@drawable/logo"
                        android:gravity="bottom"
                        android:layout_weight="1"

                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    </LinearLayout>
</layout>